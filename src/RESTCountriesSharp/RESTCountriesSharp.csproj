<Project Sdk="Microsoft.NET.Sdk">

	<PropertyGroup>
		<TargetFramework>netstandard2.0</TargetFramework>
		<GeneratePackageOnBuild>False</GeneratePackageOnBuild>
		<Title>RESTCountriesSharp</Title>
		<Version>1.1.0</Version>
		<Authors>Thomas Sebastian Jensen</Authors>
		<Company>tsjdev-apps.de</Company>
		<Description>An unofficial .NET API wrapper for RESTCountries.com</Description>
		<Copyright>Â© Thomas Sebastian Jensen | 2023</Copyright>
		<PackageProjectUrl>https://github.com/tsjdev-apps/restcountries-sharp</PackageProjectUrl>
		<RepositoryUrl>https://github.com/tsjdev-apps/restcountries-sharp</RepositoryUrl>
		<PackageLicenseExpression>MIT</PackageLicenseExpression>
		<PackageIcon>icon.png</PackageIcon>
		<PackageTags>RESTCountries.com; Api; Wrapper; Countries, free</PackageTags>
		<PackageReleaseNotes>
			- Use REFIT for easier API requests
		</PackageReleaseNotes>
		<NeutralLanguage>en</NeutralLanguage>
	</PropertyGroup>

	<ItemGroup>
		<PackageReference Include="Newtonsoft.Json" Version="13.0.3" />
		<PackageReference Include="Refit" Version="7.0.0" />
		<PackageReference Include="Refit.Newtonsoft.Json" Version="7.0.0" />
	</ItemGroup>

	<ItemGroup>
		<None Include="icon.png" Pack="true" PackagePath="" />
	</ItemGroup>

</Project>
